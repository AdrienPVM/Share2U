{% extends "layout.html.twig" %}

{% block title '' %}

{% block content %}
    <div id="requestForm">
        <div class="h3Text">
            <h3>You want to send a request for :<br/><span>{{ item.name }}</span></h3>
        </div>

        {{ form_start(requestForm) }}
        <div class="inputBox buttonBox requestForm">
            {{ form_label(requestForm) }}
            {{ form_widget(requestForm) }}
            <div id="loan_form">
                <div>
                    <button type="{{ type|default('submit') }}">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
        {{ form_end(requestForm) }}
    </div>

{% endblock %}